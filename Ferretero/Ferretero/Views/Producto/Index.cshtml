@model IEnumerable<Ferretero.Models.Producto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Crear" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Nuevo Producto
            </a>
        </div>
    </div>

    <br />

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Nombre Producto</th>
                    <th>Dc</th>
                    <th>Dp</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="16%">@item.NombreProducto</td>
                        <td width="16%">@item.DescripcionCorta</td>
                        <td width="16%">@item.DescripcionProducto</td>
                        <td width="16%">@item.Precio</td>
                        <td width="16%">@item.ImagenUrl</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-controller="Producto" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registro de productos</p>
    }
</div>